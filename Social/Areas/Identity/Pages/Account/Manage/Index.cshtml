@page
@model IndexModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

    <h3>@ViewData["Title"]</h3>
    <partial name="_StatusMessage" model="Model.StatusMessage" />
        <div class="right__block">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="manager__label">
                        <label asp-for="Username">Email: </label>
                    </div>
                    <input asp-for="Username" class="form-control disabled" disabled />
                </div>
                <div class="form-group">
                    <div class="manager__label">
                        <label asp-for="Input.FirstName">Имя: </label>
                    </div>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="manager__label">
                        <label asp-for="Input.LastName">Фамилия: </label>
                    </div>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="manager__label">
                        <label asp-for="Input.PhoneNumber">Телефон: </label>
                    </div>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="classic__btn manager__btn">Сохранить</button>
            </form>
        </div>


