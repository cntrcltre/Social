@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Смена пароля";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

    <div class="right__block">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="manager__label">
                    <label asp-for="Input.OldPassword">Старый пароль: </label>
                </div>
                <input asp-for="Input.OldPassword" class="form-control" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="manager__label">
                    <label asp-for="Input.NewPassword">Новый пароль: </label>
                </div>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="manager__label">
                    <label asp-for="Input.ConfirmPassword">Подтвердите пароль: </label>
                </div>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="classic__btn manager__btn">Сохранить</button>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}