@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="wrapper">
        <div class="sign" id="signup">
            <div class="sign__left">
                <img src="~/img/signup.svg" alt="sign">
            </div>
            <form id="form__signup" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="form__row">
                    <p>Регистрация</p>
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div>
                        <input type="text" asp-for="Input.FirstName" placeholder="Имя">
                    </div>
                    <div>
                        <input type="text" asp-for="Input.LastName" placeholder="Фамилия">
                    </div>
                    <div>
                        <input type="text" asp-for="Input.Email" placeholder="E-Mail">
                    </div>
                    <div>
                        <input type="password" asp-for="Input.Password" placeholder="Пароль">
                    </div>
                    <div>
                        <input type="password" asp-for="Input.ConfirmPassword" placeholder="Повторите пароль">
                    </div>
                    <button type="submit">Присоединиться</button>
                    <a asp-area="Identity" asp-page="/Account/Login" id="in__btn">Уже есть аккаунт</a>
                </div>
            </form>
        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
